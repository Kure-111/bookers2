<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= flash[:notice] %>
      <%= render 'user' %>
    </div>

    <div class="col-md-8 offset-md-1">
  <h2>Users</h2>
<table class="table">
  <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
<tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
        <% if user.profile_image.attached? %>
        <%= image_tag user.profile_image, size: "100x100" %>
        <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td> <%= link_to 'Show', user_path(user) %> </td>
      </tr>
    <% end %>
</tbody>
</table>
</div>
</div>
</div>